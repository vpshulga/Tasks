USE countries;

CREATE TABLE countries
(
  id INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
  name VARCHAR(255),
  population DECIMAL(10,5),
  area DECIMAL(10,5),
  national_language VARCHAR(255)
);

